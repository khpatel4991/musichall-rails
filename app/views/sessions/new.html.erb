<h1>Log In</h1>

<%= form_tag sessions_path do %>

    <div class="field form-control">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="field form-control">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class="actions form-control">
      <%= submit_tag 'Log In', :class => 'btn btn-primary' %>
    </div>
<% end %>
